---
import { Image } from "astro:assets";
import { getRelativeLocaleUrl } from "astro:i18n";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

import desk from "../assets/desk.jpg";
import fall from "../assets/fall.jpg";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="md:w-1/2 lg:w-1/2">
    <h1 class="mt-3 text-2xl">{t("about:title")}</h1>
    <p class="mt-4">
        {t("about:from")}{" "}
        <a href="https://zacatecas.tecnm.mx" target="_blank" class="underline">
            Instituto Tecnol√≥gico de Zacatecas
        </a>{" "}
        {t("about:degree")}
    </p>
    <p class="mt-4">
        {t("about:goal")} ({t("about:linkedin")}
        <a
            href="https://www.linkedin.com/in/luismgonzalezb/"
            class="underline"
            target="_blank"
        >
            LinkedIn
        </a>
        )
    </p>
    <div class="mt-4 flex justify-center">
        <Image
            src={desk}
            alt="Picture of my current desk at home"
            loading="eager"
        />
    </div>
    <p class="mt-4">
        {t("about:logo")}{" "}
        <a
            href="https://el.media.mit.edu/logo-foundation/index.html"
            target="_blank"
            class="underline"
        >
            Logo.
        </a>{" "}
        {t("about:other-langs")}
    </p>
    <p class="mt-4">
        {t("about:gaming")}{" "}
        <a
            href="https://www.ea.com/games/apex-legends"
            target="_blank"
            class="underline"
        >
            Apex Legends
        </a>{" "}
        {t("about:gaming-2")}{" "}
        <a
            href="https://www.supergiantgames.com/games/hades/"
            target="_blank"
            class="underline"
        >
            Hades,
        </a>{" "}
        <a
            href="https://www.ageofempires.com/"
            target="_blank"
            class="underline"
        >
            Age of Empires.
        </a>
    </p>
    <p class="mt-4">{t("about:music")}</p>
    <div class="mt-4">
        <div class="w-full md:w-1/2 pr-4 float-left">
            <Image src={fall} alt="Picture of me and my girl walking" />
        </div>
        <p>{t("about:family")}</p>
        <p class="mt-4">{t("about:help")}</p>
        <p class="mt-4 font-bold">{t("about:thanks")}</p>
    </div>
</div>
<div class="flex items-center justify-around w-full h-24">
    <div class="text-center pt-8">
        <a href={getRelativeLocaleUrl("en", "about")} class="underline">
            {t("langs:en")}
        </a>{" "}
        /{" "}
        <a href={getRelativeLocaleUrl("es", "about")} class="underline">
            {t("langs:es")}
        </a>
    </div>
</div>
