---
import { getRelativeLocaleUrl } from "astro:i18n";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);

const homeEn = getRelativeLocaleUrl("en", "/");
const homeEs = getRelativeLocaleUrl("es", "/");

const t = useTranslations(lang);
---

<main
    class="flex flex-col items-center justify-center w-full flex-1 px-4 text-center"
>
    <div class="md:w-1/2 lg:w-1/3">
        <p class="mt-3 text-2xl">
            {
                lang === "en" ? (
                    <span>
                        Hi, <b>Luis</b> here
                    </span>
                ) : (
                    <span>
                        Hola, soy <b>Luis</b>
                    </span>
                )
            }
        </p>
        <p class="mt-3 text-2xl">
            <span>{t("home:intro-work")}</span>{" "}
            <a
                href="https://www.linkedin.com/in/luismgonzalezb/"
                target="_blank"
            >
                Airbnb,
            </a>{" "}
            <span>
                <span>{t("home:intro-enjoy")}</span>{" "}
            </span>{" "}
            <a href={homeEn} class="underline">{t("langs:en")}</a>
            {t("joins:and")}
            <a href={homeEs} class="underline">{t("langs:es")}</a>
        </p>
    </div>
</main>
